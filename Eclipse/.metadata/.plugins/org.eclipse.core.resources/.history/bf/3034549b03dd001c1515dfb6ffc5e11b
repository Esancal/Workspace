	//accesador tipoDeRetorno nombreFuncion (parametrosARecibir)	
	public void calculoSumaPares(int numero1, Integer numero2) {
	}
	public void saludo() {
		System.out.println("Bienvenido");
	}
	
	//funciones que retornan un tipo de datos
	public Integer obtenerEdad() {
		Integer edad = 18;
		return edad;
	}
	
	public Boolean validarMayorEdad(Integer edad) {
		if(edad>=18) {
			System.out.println("Es mayor de edad");
			return true;
		}
		else {
			System.out.println("Es menor de edad");
			return false;
		}
	}
	
	
